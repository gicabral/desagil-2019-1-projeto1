<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tradutor">

    <TextView
        android:id="@+id/roman_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="@string/tradutor1"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/roman_displayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="25sp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:hint="@string/escreva1" />

    <TextView
        android:id="@+id/morse_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="@string/tradutor2"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/morse_displayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:hint="@string/escreva2"
        android:inputType="text"
        android:importantForAutofill="no"
        android:textSize="25sp" />


</LinearLayout>