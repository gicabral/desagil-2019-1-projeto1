        android:textSize="25sp"
        android:text="Estou com sede"
        android:background="@drawable/rectangle"/>

    <TextView android:id="@+id/written_message3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="25sp"
        android:text="Estou sentindo dor"
        android:background="@drawable/rectangle"/>

    <TextView android:id="@+id/written_message4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="25sp"
        android:text="Por favor, venha para cÃ¡"
        android:background="@drawable/rectangle"/>

    <TextView android:id="@+id/written_message5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="25sp"
        android:text="Preciso ir ao banheiro"
        android:background="@drawable/rectangle"/>

    <TextView android:id="@+id/chosen_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text=""/>


</LinearLayout>